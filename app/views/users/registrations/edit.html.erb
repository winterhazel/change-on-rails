<div class="container" style="margin-top: 40px !important;margin-bottom: 40px !important;">
  <div style="margin-left: -10px;margin-right: -10px;">
    <div style="margin-left: 16.66666667%;width: 66.66666667%;padding-left: 10px;padding-right: 10px;">

      <h1 style="text-align: center !important;">Edit profile</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |form| %>

        <div style="display: flex; justify-content: center;margin-top: 30px;margin-bottom: 15px;">
          <%= image_tag (@user.avatar.attached?) ? @user.avatar : 'default-user-profile.svg', style: "width: 90px;height: 90px;margin-right: 0;", class: "petition_card_user_avatar" %>
        </div>

        <div id="image_input" style="display: flex;width: 100%; height: 100%;justify-content: center;flex-direction: column;align-items: center;">
          <%= form.file_field :picture, accept: 'image/png,image/jpeg', id: "file_input", style: "display: none;" %>
          <a class="picture_button" style="height: auto;margin-top: 0;margin-bottom: 60px;" onclick="document.getElementById('file_input').click()" id="picture_button">Upload
            a photo</a>
        </div>

        <div class="input_box">
          <%= form.label "First name" %>
          <span class="item_container">
        <%= form.text_field :name, style: "border: none;", class: "text_input" %>
        </span>
        </div>


        <div class="input_box">
          <%= form.label "Last name" %>
          <span class="item_container">
        <%= form.text_field :surname, style: "border: none;", class: "text_input" %>
        </span>
        </div>

        <div class="input_box">
          <%= form.label "About me" %>
          <span class="item_container">
        <%= form.text_area :about_me, style: "border: none;resize: none; height: 300px;", placeholder: "Write a short description about yourself" %>
        </span>
        </div>

        <div class="input_box">
          <%= form.label "Country" %>
          <%= form.select :country, ["Country", "Brazil", "United States"], selected: current_user.country %>
        </div>

        <div class="input_box">
          <%= form.label "Twitter" %>
          <span class="item_container" style="display: flex;align-items: center;">
            <label style="padding-left: 10px;position: absolute;">@</label>
            <%= form.text_field :twitter_username, class: "text_input", style: "padding-left: 28px;" %>
          </span>
        </div>

        <div class="input_box">
          <%= form.label :email %>
          <span class="item_container" style="display: flex;align-items: center;">
            <%= form.email_field :email, class: "text_input" %>
          </span>
        </div>

        <div class="input_box">
          <%= form.label :password %>
          <i>(<%= @minimum_password_length %> characters minimum, leave blank if you don't want to change it)</i>
          <span class="item_container" style="display: flex;align-items: center;">
            <%= form.password_field :password, class: "text_input" %>
          </span>
        </div>

        <div class="input_box">
          <%= form.label :password_confirmation %>
          <span class="item_container" style="display: flex;align-items: center;">
            <%= form.password_field :password_confirmation, class: "text_input" %>
          </span>
        </div>

        <div class="input_box">
          <%= form.label :current_password %> <i>(we need your current password to confirm your changes)</i>
          <span class="item_container" style="display: flex;align-items: center;">
            <%= form.password_field :current_password, class: "text_input" %>
          </span>
        </div>

        <%= form.submit "Save", class: "button", style: "margin: 0;", data: {turbo: false} %>
        <%= link_to "Back", :back, class: "header_logout", style: "margin-left: 20px;" %>

      <% end %>


    </div>
  </div>
</div>
