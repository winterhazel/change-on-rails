<%- title "Sign Upãƒ»change-on-rails" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="container" style="margin-top: 40px; margin-bottom: 40px;">
    <div>
      <div style="  margin-left: 33.33333333%;width: 33.33333333%;">

        <div style="text-align: center !important;">
          <h3>Sign up</h3>
          <p>Already have an account? <a class="header_logout" href="<%= new_session_path(:user) %>">Log in</a></p>
        </div>

        <div style="margin-top: 1.5em;">
          <div class="field">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "text_input", style: "border-radius: 5px 5px 0px 0px;", placeholder: "First name" %>
          </div>

          <div class="field">
            <%= f.text_field :surname, autocomplete: "surname", class: "text_input", style: "border-radius: 0px;", placeholder: "Last name" %>
          </div>

          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text_input", style: "border-radius: 0px;", placeholder: "Email" %>
          </div>

          <div class="field">
            <div class="field">
              <%= f.password_field :password, autocomplete: "new-password", class: "text_input", style: "border-radius: 0px 0px 5px 5px;", placeholder: "Password" %>
            </div>
          </div>
        </div>

        <%= f.hidden_field :redirect_to, value: params[:redirect_to].presence %>

        <div class="actions">
          <%= f.submit "Sign up", data: {turbo: false}, class: "button", style: "width: 100%;padding-left: 16px;padding-right: 16px;" %>
        </div>

        <br>

      </div>
    </div>
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>

<% end %>
