<h1><%= "#{@user.name} #{@user.surname}" %></h1>
<p>
  <% if @user.country != "Country" %><%= @user.country %>
  <% end %>
  <% if @user.twitter_username.length > 0 %>@<%= @user.twitter_username %>
  <% end %>
</p>
<p><%= @user.about_me %></p>

<% if @user.id == current_user.id %>
  <h2>Started (<%= @petitions.size %>)</h2>
  <%= render @petitions %>

  <br>

  <h2>Signed (<%= @signatures.size %>)</h2>
  <% @signatures.each do |signature| %>
    <%= render signature.petition %>
  <% end %>
<% end %>
