<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container" style="margin-top: 40px; margin-bottom: 40px;">
    <div>
      <div style="  margin-left: 33.33333333%;width: 33.33333333%;">

        <div style="text-align: center !important;">
          <h3>Log in</h3>
          <p>Don't have an account? <a class="header_logout" href="<%= new_registration_path(:user) %>">Sign up</a></p>
        </div>


        <div style="margin-top: 1.5em;">
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text_input", style: "border-radius: 5px 5px 0px 0px;", placeholder: "Email" %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "current-password", class: "text_input", style: "border-radius: 0px 0px 5px 5px;", placeholder: "Password" %>
          </div>
        </div>

        <%= f.hidden_field :redirect_to, value: params[:redirect_to].presence %>

        <div class="actions">
          <%= f.submit "Log in", data: {turbo: false}, class: "button", style: "width: 100%;padding-left: 16px;padding-right: 16px;" %>
        </div>
        <br><br><br><br>

      </div>
    </div>
  </div>
<% end %>