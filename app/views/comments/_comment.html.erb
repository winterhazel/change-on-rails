<% unless comment.archived? %>
  <strong><%= comment.user.name %> <%= comment.user.surname %></strong> at <%= comment.created_at %>
  <p><%= comment.content %></p>


  <p>
    <%= link_to "Delete comment", [comment.petition, comment], data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
    } %>
  </p>
<% end %>