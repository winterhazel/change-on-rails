<a href=<%= petition_path(petition) %>>
  <div class="petition_card">
    <div class="petition_card_content">
      <div class="petition_card_text_section">
        <h3 class="petition_card_title"><%= petition.title %></h3>
        <p class="petition_card_description"><%= petition.description %></p>

      </div>
      <div class="petition_card_image_section" style="background-image: url('<%= url_for petition.picture %>');">
        <div style="display: block; width: 100%; padding-bottom: 100%;"></div>
        <div style="bottom: 0px; height: 100%; left: 0px; position: absolute; top: 0px; width: 100%;"></div>
      </div>
    </div>

    <div class="petition_card_footer_section">
      <%= image_tag petition.user.avatar, class: "petition_card_user_avatar" %>
      <span class="petition_card_user_name"><%= "#{petition.user.name} #{petition.user.surname}" %></span>
